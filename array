#include <iostream>
#include <string>
using namespace std;
char key;
int x = 20;
bool quit = false;
string first_name;
string second_name;
string phone;
string name[20] = {"Andrea", "Luca", "Bianca", "Licia"};
string surname[20] = {"Tosato", "Artioli", "Greco", "Riva"};
string number[20] = {"7235647826", "3485689246", "9836348115", "9186481667"};
void print_rub(){
	cout << "I tuoi contatti: " << endl << endl;
	for(int i = 0; i <= x; i++){
		if(i < 10){
			cout << " " << i << " " ;
		}
		else{
			cout << i << " ";
		}
		if(name[i] != " "){
			cout << name[i] << " " << surname[i] << " " << number[i] << endl; 
		}
	}
}
int main(){
	cout<<"Benvenuto nella rubrica"<<endl;
	do{
		print_rub();
		cout <<"cosa vuoi fare?" <<endl;
		cout << "a(aggiungere)"<<endl;
		cout << "d(cancellare)"<<endl;
		cout << "q(uscire)"<<endl;
		cin >> key;
		cout << endl;
		if (key=='a'){
			cout << "Nome: ";
			cin >> first_name;
			cout << "Cognome: ";
			cin >> second_name;
			cout << "Numero: ";
			cin >> phone;
			for(int i=0; i<=x;i++){
				if (name[i]== "" && surname[i]==""&& number[i]==""){
					name[i]=first_name;
					surname[i]= second_name;
					number[i]= phone;
					break;
				}
			}
			print_rub();	
		}
		else if(key =='d'){
			cout << "Nome: ";
			cin >> first_name;
			cout << "Cognome: ";
			cin >> second_name;
			cout << "Numero: ";
			cin >> phone;
			for(int i=0; i<=x;i++){
				if(name[i]==first_name && surname[i]== second_name && number[i]== phone){
					name[i]= "";
					surname[i]= "";
					number[i]= "";		
				}	
			}
		}
		else if(key =='q'){
			quit == true;
			break;
		}
		print_rub();
	}while(quit == false);
}
